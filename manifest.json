{
    "name": "No Shorts",
    "version": "1.0",
    "description": "Removes the element in the side menu of youtube.com",
    "permissions": ["tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/bookmark.png",
          "assets/play.png",
          "assets/delete.png",
          "assets/save.png"
        ],
        "matches": ["https://*.youtube.com/*"]
      }
    ],
    "icons": {
      "16" : "images/icon.png",
      "48" : "images/icon.png",
      "128" : "images/icon.png"
    },

    "manifest_version": 3
}